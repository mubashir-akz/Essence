<div class="row">
    <div class="p-5 col-md-8">
        <h2>Add Offer</h2>
        <br>
        <br>
        <form action="/admin/add-offer" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">Offer Name</label>
                <input type="text" class="form-control" name="name" placeholder="Offer name" required>
            </div>
            <div class="form-group">
                <label for="">Discount </label>
                <input type="number" class="form-control" name="prize" placeholder="1 to 100" required>
            </div>
            <div class="form-group">
                <div class="show-entries">
                    <label for="">Select Offer </label>
                    <select class="form-control" name="offer" onchange="selectOff(this.value)">
                        <option value="select" disabled selected>Select</option>
                        <option value="category">Category</option>
                        <option value="products">Products</option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="categories" style="display: none;">
                <div class="show-entries">
                    <label for="">Category </label>
                    <select class="form-control" name="offer">
                        <option value="select" disabled selected>Select</option>
                        {{#each categories}}
                        <option value="{{this.category}}">{{this.category}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group" id="products" style="display: none;">
                <div class="show-entries">
                    <label for="">Products </label>
                    <select class="form-control" name="offer">
                        <option value="select" disabled selected>Select</option>
                        {{#each pro}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
             <div class="form-group">
                <div class="show-entries">
                    <div class="form-group">
                        <label for="fromdate">Starting on</label>
                        <input type="date" class="form-control" name="startDate" id="fromdate" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="show-entries">
                    <div class="form-group">
                        <label for="fromdate">expire on</label>
                        <input type="date" class="form-control" name="endDate" id="fromdate" required>
                    </div>
                </div>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="control-label" for="submit"></label>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-lg" data-toggle="modal" data-target="">Save</button>

                </div>
            </div>
        </form>
    </div>

</div>


<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
    function selectOff(value) {
        if (value == 'category') {
            document.getElementById('products').style.display = 'none'
            document.getElementById('categories').style.display = 'block'
        } else {
            document.getElementById('categories').style.display = 'none'
            document.getElementById('products').style.display = 'block'
        }
    }

</script>


