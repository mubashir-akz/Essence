<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="icon" href="/checkout/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/checkout/css/core-style.css">
    <link rel="stylesheet" href="/checkout/style.css">
</head>

<body>


    <header class="header_area">
        <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
            <!-- Classy Menu -->
            <nav class="classy-navbar" id="essenceNav">
                <!-- Logo -->
                <a class="nav-brand" href="/"><img src="/checkout/img/core-img/logo.png" alt=""></a>
                <!-- Navbar Toggler -->
                <div class="classy-navbar-toggler">
                    <span class="navbarToggler"><span></span><span></span><span></span></span>
                </div>
                <!-- Menu -->
                <div class="classy-menu">
                    <!-- close btn -->
                    <div class="classycloseIcon">
                        <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                    </div>
                    <!-- Nav Start -->
                    <div class="classynav">
                        <ul>
                            <li><a href="#">Shop by category</a>
                                <div class="dropdown">
                                    <ul class="single-mega cn-col-4">
                                        {{#each categories}}
                                        {{!-- <li class="title" >{{this.category}}</li> --}}
                                        <li><a href="/filter/{{this.category}}  ">{{this.category}}</a></li>
                                        {{/each}}

                                    </ul>
                                </div>
                            </li>
                            <li><a href="#">Account</a>
                                <ul class="dropdown">
                                    {{#if users}}
                                    <li><a href="/userProfile">{{users.name}}</a></li>
                                    <li><a href="/orders">Orders</a></li>
                                    {{else}}
                                    <li><a href="/signin">Login</a></li>
                                    {{/if}}
                                    {{#if users}}
                                    <liu><a href="/signout">Logout</a></li>
                                    {{/if}}

                                </ul>
                            </li>
                            <li><a href="/contactus">Contact</a></li>
                        </ul>
                    </div>
                    <!-- Nav End -->
                </div>
            </nav>

            <!-- Header Meta Data -->
            <div class="header-meta d-flex clearfix justify-content-end">
                <!-- Search Area -->
                <div class="search-area">
                    <form action="#" method="post">
                        <input type="search" name="search" id="headerSearch" placeholder="Type for search">
                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </form>
                </div>
                <!-- Favourite Area -->
                <div class="favourite-area">
                    <a href="#"><img src="/checkout/img/core-img/heart.svg" alt=""></a>
                </div>
                <!-- User Login Info -->
                <div class="user-login-info dropdown-menu">
                    <a href="#"><img src="/checkout/img/core-img/user.svg" alt=""></a>
                </div>
                <div class="dropdown-menu">

                    {{#if users}}
                    <a href="/signout" class="dropdown-item"><i class="material-icons">&#xE8AC;</i> Logout</a></a>
                    <a href="/" class="dropdown-item"><i class="material-icons">person_outline</i> Profile</a></a>

                    {{else}}
                    <a href="/signin" class="dropdown-item"><i class="material-icons">&#xE8AC;</i> login</a></a>
                    {{/if}}
                    {{!-- </div> --}}
                </div>
                <!-- Cart Area -->
                <div class="cart-area">
                    <a href="/cart" id="essenceCartBtn"><img src="/checkout/img/core-img/bag.svg" alt="">
                        <span id="cartCount">{{cartcount}}</span></a>
                </div>
            </div>

        </div>
    </header>
    <script src="/checkout/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/checkout/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/checkout/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/checkout/js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="/checkout/js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="/checkout/js/active.js"></script>
</body>

</html>