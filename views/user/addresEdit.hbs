<div class="m-5 p-5">
    <h5 class="align-center">Edit address</h5>
    <form action="/updateAddress" method="POST" id="checkout-form" class="mt-5">
        <div class="row">
            <div class="col-md-12 mb-3">
                <label for="first_name">First Name <span>*</span></label>
                <input type="text" class="form-control" name="name" id="name" value="{{address.name}}" required>
            </div>
            <div class="col-12 mb-3">
                <label for="street_address">Address <span>*</span></label>
                <input type="text" class="form-control mb-3" value="{{address.address}}" id="address" name="address" required>
            </div>
            <div class="col-12 mb-3">
                <label for="postcode">Postcode <span>*</span></label>
                <input type="text" class="form-control" value="{{address.pincode}}" id="pin" name="pincode" required>
            </div>
            <div class="col-12 mb-3">
                <label for="phone_number">Phone No <span>*</span></label>
                <input type="number" class="form-control" name="Mobile" min="1" id="mobile" value="{{address.mobile}}" required>
                <input type="text" class="form-control" name="user" id="" value="{{address.user}}" hidden>
            </div>
            <div class="col-12 mb-3">
                <input type="submit" value="submit">
            </div>
        </div>
    </form>
</div>