<div class="m-5 p-5">
    <h5 class="align-center">Edit Profile</h5>
    <form action="/updateProfile" method="POST" class="mt-5" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 mb-3">
                <label for="first_name">First Name <span>*</span></label>
                <input type="text" class="form-control" name="name" id="name" value="{{use.name}}" required>
            </div>
            <div class="col-12 mb-3">
                <label for="street_address">E-mail
                    <span>*</span></label>
                <input type="text" class="form-control mb-3" value="{{use.email}}" id="address" readonly>
            </div>
            <div class="col-12 mb-3">
                <label for="postcode">phone no <span>*</span></label>
                <input type="text" class="form-control" value="{{use.mobile}}" id="pin" name="mobile" required>
            </div>
            <div class="col-12 mb-3">
                <label for="">image<span>*</span></label>
                <input type="file" name="image" value="/user-images/{{use._id}}.jpg" class="form-control">
            </div>
                <input type="text" class="form-control" name="user" value="{{use._id}}" hidden>
            <div class="col-12 mb-3">
                <input type="submit" value="submit">
            </div>
        </div>
    </form>
</div>